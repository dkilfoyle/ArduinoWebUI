doctype html
html
    head
    
        | <meta charset="utf-8">
        | <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        title= webtitle
    
        // Stylesheets
        link(href="css/bootstrap.min.css", rel="stylesheet")
        link(href="font-awesome/css/font-awesome.css", rel="stylesheet")
        link(href="css/sb-admin.css", rel="stylesheet")

        // scripts
        script(src="js/jquery-1.10.2.js")
        script(src="js/bootstrap.min.js")
        script(src="js/plugins/metisMenu/jquery.metisMenu.js")
        script(src="js/sb-admin.js")

        block morehead

    body

        #wrapper

            // header and sidebar navigation
            nav(class="navbar navbar-default navbar-fixed-top", role="navigation", style="margin-bottom: 0")
                
                // top left navbar header
                .navbar-header
                    button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".sidebar-collapse")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="index.html")= webtitle

                // top right navbar links
                ul.nav.navbar-top-links.navbar-right
                    li.dropdown
                        a.dropdown-toggle(data-toggle='dropdown', href='#')
                            i.fa.fa-user.fa-fw
                            i.fa.fa-caret-down
                        ul.dropdown-menu.dropdown-user
                            block usernavs


                // sidebar navigation
                .navbar-default.navbar-static-side(role='navigation')
                    .sidebar-collapse
                        ul#side-menu.nav
                            li.sidebar-search
                                .input-group.custom-search-form
                                    input.form-control(type='text', placeholder='Search...')
                                    span.input-group-btn
                                        button.btn.btn-default(type='button')
                                            i.fa.fa-search
                            block sidenavs

            // panel layouts
            #page-wrapper
                .row
                    .col-lg-12
                        h1.page-header= pagetitle
                .row
                    .col-lg-8
                        block leftcol

                    .col-lg-4
                        block rightcol

